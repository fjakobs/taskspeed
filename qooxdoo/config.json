{
  "let" :
  {
    "APPLICATION"  : "bom",
    "QOOXDOO_PATH" : "../../org.qooxdoo.sdk/qooxdoo",
    "ROOT"         : "."
  },

  "jobs" :
  {
    "build" :
    {
      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : ".."          
        }
      ],

      "cache" :
      {
        "path" : "./cache"
      },

      "include" : 
      [
        "qx.bom.Lifecycle",
        "qx.bom.Element",
        "qx.bom.element.*",
        "qx.dom.*",
        "qx.bom.Selector",
        "qx.bom.Collection",
        "qx.event.handler.Mouse"
      ],

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      },

      "compile-dist" :
      {
        "paths" :
        {
          "file" : "../frameworks/qooxdoo-1.0.js"
        },
        "uris" :
        {
          "script"   : ".",
          "resource" : "."
        },
        "code" :
        {
          "format"   : true,
          "optimize" : [ "variables", "basecalls", "privates", "strings" ]
        }
      }
    }
  }
}
